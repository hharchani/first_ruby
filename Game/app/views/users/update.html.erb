<h1>Edit Profile</h1>

<%= form_for @current_user do |f| %>
<% if @current_user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :input_html => { :value => @current_user.name } %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, :input_html => { :value => @current_user.email } %>
  </p>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, :input_html => { :value => @current_user.username } %>
  </p>
  <p>
    <%= f.label :old_password %>
    <%= f.password_field :old_password %>
  </p>
  <p>
    <%= f.label :new_password %>
    <%= f.password_field :new_password %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>